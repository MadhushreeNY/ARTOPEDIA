<%- include ("partials/header.ejs") %>


<% if( profile.category == "Art"){ %>
<div class="main2">
  <div class="row">
    <% profile.art.forEach(function(art){ %>
      <div class="col-sm-6 col-md-4">
        <div class="thumbnail gbh ">
        <img src="<%= art.image %>" alt="Image" style="width:250px;height:260px">
        <!-- <iframe width="560" height="315" src="<%= art.image %>" frameborder="0" allowfullscreen></iframe>
      </iframe> -->
          <div class="caption">
            <p>
              <span class="tmb"><%= art.name %></span>
