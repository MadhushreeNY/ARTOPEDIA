                                <form id="delete_post" action="/artopedia/profilee/<%= profile._id %>/art/<%= art._id %>?_method=DELETE" method="POST">
                <button style="border: none;" class="btn btn-danger btn-md"><i class="fas fa-trash-alt"></i></button>
                </form>
            
              <% } %>
            </div>
            </div>
          </div>
        </div>
      </div>
    <% }); %>
  </div>
</div>
<% } %>


