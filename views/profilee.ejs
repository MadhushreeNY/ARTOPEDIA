<%- include ("partials/header.ejs") %>


<% if( profile.category == "Art"){ %>
<div class="main2">
  <div class="row">
    <% profile.art.forEach(function(art){ %>
      <div class="col-sm-6 col-md-4">
        <div class="thumbnail gbh ">
        <img src="<%= art.image %>" alt="Image" style="width:250px;height:260px">
          <div class="caption">
            <p><a href="" class="btn btn-danger btn-md" role="button"><i class="far fa-heart"></i></a> 
              <% if(currentUser && (profile.author.id.equals(currentUser._id))){ %>
                <a href="/artopedia/profilee/<%= profile._id %>/art/<%= art._id %>/edit" class="btn btn-primary btn-md" role="button"><i class="fas fa-edit"></i></a>
              <% } %>
              <span class="tmb"><%= art.name %></span>
              <a href="/artopedia/profilee/<%= profile._id %>" class="btn btn-primary btn-md" role="button"><i class="fas fa-address-card"></i></a></p>
              <% if(currentUser && (profile.author.id.equals(currentUser._id))){ %>
                <form id="delete_post" action="/artopedia/profilee/<%= profile._id %>/art/<%= art._id %>?_method=DELETE" method="POST">
                  <button style="border: none;" class="btn btn-primary btn-md"><i class="fas fa-trash-alt"></i></button>
                </form>
              <% } %>
          </div>
        </div>
      </div>
    <% }); %>
  </div>
</div>
<% } %>


<% if( profile.category == "Writing"){ %>
  
<div class="main2">
  <div class="row">
    <% profile.writing.forEach(function(writing){ %>
      <div class="col-sm-6 col-md-4">
        <div class="thumbnail gbh ">
      <% console.log( writing.writing ) %>
       <textarea class="textarea" readonly noscroll><%= writing.writing %></textarea>
          <div class="caption">
            <p><a href="" class="btn btn-danger btn-md" role="button"><i class="far fa-heart"></i></a> 
              <% if(currentUser && (profile.author.id.equals(currentUser._id))){ %>
                <a href="/artopedia/profilee/<%= profile._id %>/writing/<%= writing._id %>/edit" class="btn btn-primary btn-md" role="button"><i class="fas fa-edit"></i></a>
              <% } %>
              <span class="tmb"><%= writing.name %></span>
              <a href="/artopedia/profilee/<%= profile._id %>" class="btn btn-primary btn-md" role="button"><i class="fas fa-address-card"></i></a></p>
              <% if(currentUser && (profile.author.id.equals(currentUser._id))){ %>
                <form id="delete_post" action="/artopedia/profilee/<%= profile._id %>/writing/<%= writing._id %>?_method=DELETE" method="POST">
                  <button style="border: none;" class="btn btn-primary btn-md"><i class="fas fa-trash-alt"></i></button>
                </form>
              <% } %>
          </div>
        </div>
      </div>
    <% }); %>
  </div>
</div>
<% } %>


<div class="sidenav-right">
  <div class="profile" >
    <img src="<%= profile.image %>">
    <h3 ><%= profile.name %></h3>
    <p><%= profile.description %></p>
    <br><br>
      <p>CONTACT:</p>
      <p><span class="glyphicon glyphicon-phone-alt" aria-hidden="true"></span>    <%= profile.phone %></p>
      <p><i class="fa fa-envelope" aria-hidden="true"></i>    <%= profile.email %></p>
     <% if(currentUser && (profile.author.id.equals(currentUser._id))){ %>
      <a class="btn btn-primary btn-large" href="/artopedia/profilee/<%= profile._id %>/art/new">Add New</a>
      <% } %>
    </div>
<%- include ("partials/footer.ejs") %>