<%- include ("partials/header.ejs") %>
<% var id; %>
<% var id2; %>

  <div class="sidenav">
    <a href="/artopedia/dance">ALL POSTS</a>
    <a href="/artopedia/dance/Sad">SAD</a>
    <a href="/artopedia/dance/Love">LOVE</a>
    <a href="/artopedia/dance/Friendship">FRIENDSHIP</a>
    <a href="/artopedia/dance/Patriotic">PATRIOTIC</a>
    <a href="/artopedia/dance/Life">LIFE</a>
    <a href="/artopedia/dance/Others">OTHERS</a>
  </div>
  <div class="main">
  <div class="roww">
    <% dance.forEach(function(dance){ %>
    <div class="col-sm-6 col-md-4">
      <% profile.forEach(function(profile){ %>
        <% if (profile.author.username == dance.author.username) { %>
          <% id=profile._id %>
          <% id2=profile.author.id %>
        <% } %>
        <% }); %>
      
        <div class="thumbnail">
          <video width="250px" height="260px" style="margin-left:40px" controls>
            <source src="<%= dance.video %>" type="video/mp4">
          </video>
           <div class="caption">
            
            <p> <span class="tmb"><%= dance.name %></span></p>
            <p>
                <em> <%= moment(dance.createdAt).fromNow() %></em>
              </p>
            <!-- <form class="form-inline"> -->
                <div class="row">
                   
             <div class="col-xs-3"><% if(currentUser && (id2.equals(currentUser._id))){ %>
                <a href="/artopedia/profilee/<%= id %>/dance/<%= dance._id %>/edit" class="btn btn-primary btn-md" role="button"><i class="fas fa-edit"></i></a>
                    <% } %>
                </div>
                <div class="col-xs-3">
                    <a href="#" class="btn btn-danger btn-md" role="button" ><i class="fas fa-expand"></i></a> </div>
                    <div class="col-xs-3"><a href="/artopedia/profilee/<%= id %>" class="btn btn-primary btn-md" role="button"><i class="fas fa-address-card"></i></a>
                    </div>
              <div class="col-xs-3">
              <% if(currentUser && (id2.equals(currentUser._id))){ %>
               <form id="delete_post" action="/artopedia/profilee/<%= id %>/dance/<%= dance._id %>?_method=DELETE" method="POST">
               
              <button style="border: none;" class="btn btn-danger btn-md"><i class="fas fa-trash-alt"></i></button>
   
               </form>
              <!-- </form> -->
              <% } %>
            </div>
        </div>
   
             </div>
         </div>
        </div>
    <% }); %>
  </div>
</div>
<%- include ("partials/footer.ejs") %>